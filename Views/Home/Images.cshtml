@{
    ViewData["Title"] = "Images Page";
}

<h1>Dropzone Bootstrap Imágenes guardadas</h1>
<h2 class="lead">Uploaded images</h2>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"><a href="~/">Demo</a></li>
        <li class="breadcrumb-item active" aria-current="page">Dropzone Bootstrap Imágenes guardadas</li>
    </ol>
</nav>

<div class="row">
    <div id="content" class="col-lg-12">
        <h2>images/</h2>
        <div class="row">
            @model string[]
            @foreach (var item in Model)
            {
                <div class="col-xs-12 col-lg-2 text-center" style="margin-bottom:10px;">
                    <span class="preview" style="width:160px;height: 160px;margin-bottom:7px;">
                        <img src="/images/@item" style="max-width:160px;max-height: 160px;" />
                    </span>
                    <a class="btn btn-primary" href="?file=@item">Eliminar</a>
                </div>
            }
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">

    </div>
</div>

<div class="card">

</div>

<div class="footer-content row">
    <div class="col-lg-12">
        <div class="pull-right">
            <a href="dropzone-multiple.zip" class="btn btn-primary">
                <i class="fa fa-download"></i> Descargar
            </a>
        </div>
    </div>
</div>